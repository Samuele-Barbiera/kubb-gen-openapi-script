{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["./templates/axios/client.ts", "./dist/index.js"]
	},
	"linter": {
		"enabled": true,
		"ignore": ["./templates/axios/client.ts", "./dist/index.js"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noDuplicateJsxProps": "warn",
				"noDuplicateClassMembers": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"noParameterAssign": "off"
			},
			"complexity": { "noUselessLoneBlockStatements": "off" }
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"attributePosition": "multiline",
		"lineEnding": "crlf",
		"lineWidth": 120
	},
	"css": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"attributePosition": "multiline",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "es5"
		}
	}
}
